<!doctype html>
<head>
    <title><%= @name %> | <%= settings.sitename %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;">
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/screen.css">  
</head>
<body>
    <section id="content">
        <article id="page">
            <h1 class="title"><%= '<a href="/">Home</a> &gt; ' if @name != "Home" %><%= @name %></h1>
            <% if @alert %>
                <div class="alert-message error"><%= @alert %></div>
            <% end %>
            <%= yield %>
        </article>
        <% if !@error %>
            <nav class="tools">
                <a href="/" class="btn small <%= "disabled" if @name == "Home" %>">&lt; Home</a>
                <a href="/list" class="btn small <%= "disabled" if @name == "Known pages" %>">Page list</a>
                <% if @page && !@editing && !settings.readonly %>
                    <a href="/p/new" class="btn small">New page</a>
                    <a href="/p/<%= @page.permalink %>/edit" class="btn small primary">Edit this</a>
                <% elsif @newpage %>
                    <a href="/p/new/<%= @newpage %>" class="btn small primary">Create <%= @wiki.file_to_pagename(@newpage) %></a>
                <% end %>
            </nav>
        <% end %>
    </section>
</body>
</html>
